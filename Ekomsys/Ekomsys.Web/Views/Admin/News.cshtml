@model List<Ekomsys.Entities.tb_News>

@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src='@Url.Content("~/Scripts/News/News.js")'></script>
<h2>News</h2>

<div class="doc">
    <div class="widget">
        <h3>This is a toggle element</h3>
        <div id="accordion-second" class="clearfix">
            <div class="accordion" id="accordion3">
                @foreach (var item in Model)
                {
                    Html.RenderPartial("_NewsDetails", item);
                }
            </div>
            <!-- end accordion -->
        </div>
        <!-- end accordion first -->
    </div>
    <!-- end widget -->
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div id="window" style="display: none;">
            <h2 id="jQHeadingAddEditNews">Add News</h2>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <input type="text" name="title" id="jQNewsTitle" class="form-control" placeholder="Title">
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <textarea class="form-control" name="description" id="jQNewsDescription" rows="6" placeholder="Description"></textarea>
                <label>Image</label><input type="file" name="file" />
                <label>Active</label><input type="checkbox" name="active" id="jQNewsActive">
            </div>
            <button type="submit" value="SEND" id="submit" class="btn btn-lg btn-primary pull-right">Save</button>

        </div>

        <button type="button" class="btn btn-primary" id="jQanchorShowDialog">Add Notes</button>
        
    </div>
</form>


